<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3e5f5"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_main"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        card_view:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/iv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/events"
            />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_main"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Events"
        android:textSize="30dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_cod"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/cv_rob"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:id="@+id/iv_code"
            android:alpha="0.7"
            android:src="@drawable/code"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/tv_cod_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text="@string/Cod_events"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_rob"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/tv_head"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:id="@+id/iv_robot"
            android:alpha="0.75"
            android:src="@drawable/robot"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/tv_rob_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:text="@string/Robot_events"/>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_involve"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/cv_bus"
        android:layout_alignStart="@+id/cv_cod"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:alpha="0.75"
            android:id="@+id/iv_quiz"
            android:src="@drawable/quiz"/>

        <TextView
            android:id="@+id/tv_quiz_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/Involve_events"
            android:textColor="#000000"
            android:textSize="20dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_bus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/cv_rob"
        android:layout_marginBottom="19dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:id="@+id/iv_bus"
            android:alpha="0.9"
            android:src="@drawable/busi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:textSize="20dp"
            android:layout_marginLeft="18dp"
            android:id="@+id/tv_bus_text"
            android:layout_marginTop="18dp"
            android:textColor="#000000"
            android:text="@string/Bus_events"/>
    </android.support.v7.widget.CardView>



</RelativeLayout>