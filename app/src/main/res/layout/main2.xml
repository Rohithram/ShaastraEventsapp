<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_eventcag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ad1457"
        android:layout_marginTop="36dp"
        android:text="Eventcategory" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cv_event1"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_eventcag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        >
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_event1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Event1"
            android:textColor="#311b92"
            android:textSize="20dp"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cv_event2"
        android:layout_height="50dp"
        android:layout_below="@+id/cv_event1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_event2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Event2"
                android:textColor="#311b92"
                android:textSize="20dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>